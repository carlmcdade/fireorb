function fo_1_block_admin_configure_validate($form_id, $form_values) {
  if ($form_values['module'] == 'block') {
    if (empty($form_values['info']) || db_num_rows(db_query("SELECT bid FROM {boxes} WHERE bid != %d AND info = '%s'", $form_values['delta'], $form_values['info']))) {
      form_set_error('info', fo_1_text('Please ensure that each block description is unique.'));
    }
  }
}

function fo_1_block_admin_configure_submit($form_id, $form_values) {
  if (!form_get_errors()) {
    db_query("UPDATE {blocks} SET visibility = %d, pages = '%s', custom = %d WHERE module = '%s' AND delta = '%s'", $form_values['visibility'], trim($form_values['pages']), $form_values['custom'], $form_values['module'], $form_values['delta']);
    module_invoke($form_values['module'], 'block', 'save', $form_values['delta'], $form_values);
    fo_1_set_message(fo_1_text('The block configuration has been saved.'));
    fo_1_cache_clear_all();
    return 'admin/block';
  }
}

